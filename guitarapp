<script>
/* ------------------ SONG DATA (PLACEHOLDER) ------------------ */
const songs = [
    {
        title: "Blues in A",
        genre: "Blues",
        tabs: `e|----------------|
B|----------------|
G|-----2--4--2----|
D|--2-------------|
A|----------------|
E|----------------|`,
        notes: "A minor pentatonic over 12-bar progression",
        audio: ""
    },
    {
        title: "Country Strummer",
        genre: "Country",
        tabs: "G - C - D (boom-chick strum)",
        notes: "G major chord progression",
        audio: ""
    },
    {
        title: "Metal Riff X",
        genre: "Heavy Metal",
        tabs: "E|0-0-3-0-5-0-6-5|",
        notes: "Palm-muted E minor riff",
        audio: ""
    }
];

/* ------------------ STATE ------------------ */
let currentSong = songs[new Date().getDate() % songs.length];
let showTabs = true;

/* ------------------ INIT ------------------ */
const songList = document.getElementById("songList");
songs.forEach(song => {
    const div = document.createElement("div");
    div.className = "song";
    div.innerHTML = `<strong>${song.title}</strong><span>${song.genre}</span>`;
    div.onclick = () => loadSong(song);
    songList.appendChild(div);
});

loadSong(currentSong);

/* ------------------ FUNCTIONS ------------------ */
function loadSong(song) {
    currentSong = song;
    document.getElementById("songTitle").textContent = song.title;
    document.getElementById("songGenre").textContent = song.genre;
    document.getElementById("lessonDisplay").textContent = showTabs ? song.tabs : song.notes;
    document.getElementById("audioPlayer").src = song.audio;
}

function toggleView() {
    showTabs = !showTabs;
    document.getElementById("lessonDisplay").textContent = showTabs ? currentSong.tabs : currentSong.notes;
}

function playSong() {
    document.getElementById("audioPlayer").play();
}

function pauseSong() {
    document.getElementById("audioPlayer").pause();
}

/* ------------------ METRONOME ------------------ */
let metroInterval = null;
const bpmInput = document.getElementById("bpm");
const bpmLabel = document.getElementById("bpmLabel");

bpmInput.oninput = () => bpmLabel.textContent = bpmInput.value + " BPM";

function toggleMetronome() {
    if (metroInterval) {
        clearInterval(metroInterval);
        metroInterval = null;
        return;
    }
    const interval = 60000 / bpmInput.value;
    metroInterval = setInterval(() => {
        const click = new Audio("data:audio/wav;base64,UklGRigAAABXQVZFZm10IBAAAAABAAEAESsAACJWAAACABAAZGF0YQQAAAA=");
        click.play();
    }, interval);
}

/* ------------------ TUNER ------------------ */
async function startTuner() {
    const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
    const ctx = new AudioContext();
    const source = ctx.createMediaStreamSource(stream);
    const analyser = ctx.createAnalyser();
    source.connect(analyser);
    analyser.fftSize = 2048;
    const buffer = new Float32Array(analyser.fftSize);

    function detect() {
        analyser.getFloatTimeDomainData(buffer);
        const freq = autoCorrelate(buffer, ctx.sampleRate);
        if (freq !== -1) {
            document.getElementById("tunerNote").textContent = freq.toFixed(1) + " Hz";
            document.getElementById("tunerStatus").textContent = "Signal detected";
        }
        requestAnimationFrame(detect);
    }
    detect();
}

function autoCorrelate(buf, sampleRate) {
    let SIZE = buf.length;
    let rms = 0;
    for (let i = 0; i < SIZE; i++) rms += buf[i] * buf[i];
    rms = Math.sqrt(rms / SIZE);
    if (rms < 0.01) return -1;

    let bestOffset = -1;
    let bestCorrelation = 0;
    for (let offset = 20; offset < 1000; offset++) {
        let corr = 0;
        for (let i = 0; i < SIZE - offset; i++) {
            corr += buf[i] * buf[i + offset];
        }
        if (corr > bestCorrelation) {
            bestCorrelation = corr;
            bestOffset = offset;
        }
    }
    return bestOffset > 0 ? sampleRate / bestOffset : -1;
}
</script>

